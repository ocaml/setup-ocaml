{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": ["@tsconfig/strictest/tsconfig.json"],
  "compilerOptions": {
    "isolatedModules": true,
    "module": "ESNext",
    "moduleDetection": "force",
    "moduleResolution": "NodeNext",
    "noEmit": true
  },
  "exclude": ["node_modules"]
}
