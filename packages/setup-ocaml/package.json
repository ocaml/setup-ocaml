{
  "name": "@ocaml/setup-ocaml",
  "scripts": {
    "build:main": "ncc build src/index.ts --license=LICENSE.txt --out ../../dist",
    "build:post": "ncc build src/post.ts --license=LICENSE.txt --out ../../dist/post",
    "build": "yarn build:main & yarn build:post",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "lint": "TIMING=1 eslint .",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@actions/cache": "3.2.2",
    "@actions/core": "1.10.0",
    "@actions/exec": "1.1.1",
    "@actions/github": "5.1.1",
    "@actions/glob": "0.4.0",
    "@actions/http-client": "2.1.1",
    "@actions/io": "1.1.3",
    "@actions/tool-cache": "2.0.1",
    "cheerio": "1.0.0-rc.12",
    "date-fns": "2.30.0",
    "semver": "7.5.4",
    "yaml": "2.3.1"
  },
  "devDependencies": {
    "@ocaml/eslint-config-ocaml": "workspace:*",
    "@tsconfig/node20": "20.1.2",
    "@tsconfig/strictest": "2.0.1",
    "@types/node": "20.4.9",
    "@types/prettier": "3.0.0",
    "@types/semver": "7.5.0",
    "@vercel/ncc": "0.36.1",
    "eslint": "8.46.0",
    "prettier": "3.0.1",
    "typescript": "5.1.6"
  },
  "private": true
}
